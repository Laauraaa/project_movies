{{>partials/headerComment}}

<main>
            <div class="posterArea">
                <img src="{{ movie.image }}" alt="" id="moviePosterArea">
                <h3>{{ movie.name }}</h3>
            </div>
            <div class="comentArea">
                <div class="addComent"> 
                    <h5 class="TitlePageComent">Adicionar uma avaliação ao filme:</h5>
                    <input type="text" name="" id="getNameComent" placeholder="Nome">
                    <textarea id="getComentTxt" placeholder="Digite o comentário aqui"></textarea>
                    <input type="button" value="Enviar" id="sendComment">
                </div>
                
                <div class="areaComentMovie">
                    {{ #movie.comment }}
                    <div class="comentMovie">

                        <h5 id="nameComentMovie">{{ name }}</h5>
                        <h5 id="txtComentMovie">
                            {{ text }}
                        </h5>

                    </div>
                    {{ /movie.comment }}
                </div> 
                
            </div>
        </main>

{{>partials/footer}}